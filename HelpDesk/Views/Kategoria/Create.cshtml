@model Helpdesk.Models.Kategoria

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <h2 class="headerInfo">Utwórz nową kategorię</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal edit">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NazwaKategorii, htmlAttributes: new { @class = "applicationLabel col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NazwaKategorii, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NazwaKategorii, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.OpisKategorii, htmlAttributes: new { @class = "applicationLabel col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OpisKategorii, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OpisKategorii, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <hr />

        <div>
            <input type="submit" value="Utwórz" class="btn btnSave" />
        </div>
        <div class="btn btnReturn">
            @Html.ActionLink("Powrót do listy", "Index")
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>