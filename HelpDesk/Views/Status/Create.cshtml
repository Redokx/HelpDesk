@model Helpdesk.Models.Status

@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h2 class="headerInfo">Tworzenie statusu</h2>
            <hr />
            <div class="form-horizontal edit">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.NazwaStatusu, htmlAttributes: new { @class = "applicationLabel col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NazwaStatusu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NazwaStatusu, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <hr />
            <div>
                <input type="submit" value="Utwórz" class="btn btnSave" />
            </div>
            <div class="btn btnReturn">
                @Html.ActionLink("Powrót do listy", "Index")
            </div>
        }

    </div>
</body>
</html>
