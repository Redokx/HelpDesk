@model Helpdesk.Models.Komentarz

@using (Html.BeginForm("PartialCreate", "Komentarz", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <input type="hidden" id="IdZgloszenia" name="IdZgloszenia" value="@ViewBag.IdZgloszenia">
    <h4>Komentarz do zgloszenia <em>"@ViewBag.Temat"</em></h4>
    @Html.EditorFor(model => model.Tresc, new { htmlAttributes = new { @class =   "form-control" } })
    @Html.ValidationMessageFor(model => model.Tresc, "", new { @class = "textdanger" })
    <br />
    <div>
        <div>
            <div>
                <input type="submit" value="Zapisz" class="btn btnSave" />
                <div class="btn btnReturn"> @Html.ActionLink("Powrót do listy", "Index", "Zgloszenie")</div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
