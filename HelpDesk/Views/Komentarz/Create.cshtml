@model Helpdesk.Models.Komentarz

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="IdZgloszenia" name="IdZgloszenia" value="@ViewBag.IdZgloszenia">
    <h4>Komentarz do zgloszenia "@ViewBag.Temat"</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.EditorFor(model => model.Tresc, new {
    htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Tresc, "", new
    { @class = "text-danger" })
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btndefault" />
        </div>
    </div>
}


@Html.ActionLink("Powrót do zgloszenia", "Details", "Zgloszenie", new { id =@ViewBag.IdZgloszenia }, null)


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
