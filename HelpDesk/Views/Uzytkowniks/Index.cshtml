@model IEnumerable<Helpdesk.Models.Uzytkownik>

@{ ViewBag.Title = "Index"; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (TempData["Potwierdzenie"] != null)
    {
    <div class="alert alert-info" role="alert">
        @TempData["Potwierdzenie"]
    </div>
    }
    <div class=" ">
        <h2 class="headerInfo">Użytkownicy</h2>
        <hr />
        <div class="btn btnNewApplication">
            <i class="fas fa-plus"></i>
            @Html.ActionLink("Dodaj nowego użytkownika", "Register", "Account")
        </div>
        <br /><br />
        <table class="col-auto table-hover">
            <tr>
                <th class="tableFilters">
                    Login
                </th>
                <th class="tableFilters">
                    Imię
                </th>
                <th class="tableFilters">
                    Nazwisko
                </th>
                <th class="tableFilters">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="tableFilters">
                    Potwierdzony email?
                </th>
                <th class="tableFilters">
                    Numer telefonu
                </th>
                <th class="tableFilters">
                    Data zakończenia blokady
                </th>
                <th class="tableFilters">
                    Czy zablokowany?
                </th>
                @*<th class="tableFilters">
                        Ilość błędnych logowań
                    </th>*@
                <th class="tableFilters">
                    Opcje
                </th>
                <th class="tableFilters"></th>
            </tr>

            @foreach (var item in Model)
            {
<tr>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.Imie)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.Nazwisko)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.EmailConfirmed)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
    </td>
    <td class="applicationList">
        @Html.DisplayFor(modelItem => item.LockoutEnabled)
    </td>
    @*<td class="applicationList">
            @Html.DisplayFor(modelItem => item.AccessFailedCount)
        </td>*@
    <td class="applicationList">
        <div class="btn btnDetails">@Html.ActionLink("Szczegóły", "Details", new { id = item.Id })</div>
        <div class="btn btnEdit">@Html.ActionLink("Edycja", "Edit", new { id = item.Id })</div>

        <div class="btn btnEdit">@Html.ActionLink("Reset hasła", "AdminResetPassword", "Account", new { id = item.Id }, null)</div>
        <div class="btn btnDelete"><i class=" ">&nbsp</i>@Html.ActionLink("Usuń", "Delete", new { id = item.Id })</div>
    </td>
</tr>
}

        </table>
    </div>
</body>
</html>
